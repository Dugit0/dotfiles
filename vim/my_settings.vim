set encoding=utf-8

" autocomplete brackets
inoremap " ""<left>
inoremap ' ''<left>
inoremap ( ()<left>
inoremap [ []<left>
inoremap { {}<left>
" inoremap < <><left>

" settings for view vim
set number relativenumber     " display line numbers
set wrap                      " wrap long lines to fit in the window
set linebreak                 " line break by word, not by character

" set settings for tabs
set tabstop=4
set shiftwidth=4
set smarttab
set expandtab
set smartindent
set copyindent

"set hlsearch                  " ???
"set incsearch                 " ???

" set shared clipboard
set clipboard=unnamedplus

set colorcolumn=119

set keymap=russian-jcukenwin
set iminsert=0
set imsearch=0
